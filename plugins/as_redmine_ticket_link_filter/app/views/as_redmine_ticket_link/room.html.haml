-# -*- coding: utf-8 -*-
.yield
 = render :partial => "shared/room_info", :locals => { :room => @room, :has_button => false }
 .configure
  =form_for :config, :url => {:action => :room } do |form|
   %fieldset
    %legend= t(:input_redmine_root)
    =text_field :config, :root, {:class => :text, :autofocus => true, :placeholder => t(:placeholder_redmine_root)}
   %fieldset
    %legend= t(:input_api_key)
    =text_field :config, :api_key, {:class => :text, :autofocus => true, :placeholder => t(:placeholder_api_key)}
   %fieldset
    %legend= t(:input_project_name)
    =text_field :config, :project_name, {:class => :text, :autofocus => true, :placeholder => t(:placeholder_project_name)}
   =submit_tag t(:update_config), :class => "submit red button large"

